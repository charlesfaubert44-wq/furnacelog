{
  "name": "furnacelog-backend",
  "version": "1.0.0",
  "description": "FurnaceLog Backend API - Northern Home Maintenance Tracker",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon src/server.js",
    "start": "cross-env NODE_ENV=production node src/server.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,json}\"",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "audit:endpoints": "node scripts/audit-endpoints.js",
    "audit:endpoints:verbose": "VERBOSE=true node scripts/audit-endpoints.js",
    "update:check": "npm outdated",
    "update:deps": "npm update && npm audit fix"
  },
  "keywords": [
    "furnacelog",
    "home-maintenance",
    "northern-canada",
    "api",
    "express"
  ],
  "author": "FurnaceLog Team",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.5",
    "bcryptjs": "^3.0.3",
    "bullmq": "^5.1.5",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csrf-csrf": "4.0.3",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.3",
    "minio": "^7.1.3",
    "mongoose": "^9.1.1",
    "morgan": "^1.10.1",
    "mqtt": "5.14.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.12",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "redis": "^5.10.0",
    "winston": "^3.11.0",
    "ws": "8.18.3",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "cross-env": "10.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
